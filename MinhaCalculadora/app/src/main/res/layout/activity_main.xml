<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayoutCalculadora">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/textViewOutputScreen"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:textSize="50sp"
            android:layout_gravity="fill"
            android:padding="4dp" />

        <Button style="@style/BotaoCalcular"
            android:text="/"
            android:id="@+id/botaoDividir"
            android:layout_row="1"
            android:layout_column="3"
            />

        <Button style="@style/BotaoCalcular"
            android:text="7"
            android:id="@+id/botao7"
            android:layout_row="2"
            android:layout_column="0" />

        <Button style="@style/BotaoCalcular"
            android:text="8"
            android:id="@+id/botao8"
            android:layout_row="2"
            android:layout_column="1" />

        <Button style="@style/BotaoCalcular"
            android:text="9"
            android:id="@+id/botao9"
            android:layout_row="2"
            android:layout_column="2" />

        <Button style="@style/BotaoCalcular"
            android:text="*"
            android:id="@+id/botaoMultiplicar"
            android:layout_row="2"
            android:layout_column="3" />

        <Button style="@style/BotaoCalcular"
            android:text="4"
            android:id="@+id/botao4"
            android:layout_row="3"
            android:layout_column="0" />

        <Button style="@style/BotaoCalcular"
            android:text="5"
            android:id="@+id/botao5"
            android:layout_row="3"
            android:layout_column="1" />

        <Button style="@style/BotaoCalcular"
            android:text="6"
            android:id="@+id/botao6"
            android:layout_row="3"
            android:layout_column="2" />

        <Button style="@style/BotaoCalcular"
            android:text="-"
            android:id="@+id/botaoSubtrair"
            android:layout_row="3"
            android:layout_column="3" />

        <Button style="@style/BotaoCalcular"
            android:text="1"
            android:id="@+id/botao1"
            android:layout_row="4"
            android:layout_column="0" />

        <Button style="@style/BotaoCalcular"
            android:text="2"
            android:id="@+id/botao2"
            android:layout_row="4"
            android:layout_column="1" />

        <Button style="@style/BotaoCalcular"
            android:text="3"
            android:id="@+id/botao3"
            android:layout_row="4"
            android:layout_column="2" />

        <Button style="@style/BotaoCalcular"
            android:text="+"
            android:id="@+id/botaoAdicionar"
            android:layout_row="4"
            android:layout_column="3" />

        <Button style="@style/BotaoCalcular"
            android:text="0"
            android:id="@+id/botao0"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal" />

        <Button style="@style/BotaoCalcular"
            android:text="="
            android:id="@+id/botaoIgual"
            android:layout_row="5"
            android:layout_column="3" />

        <Button style="@style/BotaoCalcular"
            android:text="C"
            android:id="@+id/botaoC"
            android:layout_row="1"
            android:layout_column="0"
            />
    </GridLayout>
</RelativeLayout>